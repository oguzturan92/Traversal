@model About
@{
    ViewData["Title"] = "AboutCreate";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Hakkımızda Oluştur</h6>
                    <hr>
                </div>
                <div class="card-body pt-0 p-4">
                    <form asp-area="Admin" asp-controller="About" asp-action="AboutCreate" method="post">
                        <div class="form-group">
                            <span class="validation-text" id="validation-text" asp-validation-for="AboutTitle"></span>
                            <label for="AboutTitle">Başlık</label>
                            <input type="text"asp-for="AboutTitle" id="AboutTitle" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="AboutDescription"></span>
                            <label for="AboutDescription">Açıklama</label>
                            <input type="text" asp-for="AboutDescription" id="AboutDescription" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="AboutImage"></span>
                            <label for="AboutImage">Resim</label>
                            <input type="text" asp-for="AboutImage" id="AboutImage" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="AboutTitle2"></span>
                            <label for="AboutTitle2">Başlık 2</label>
                            <input type="text" asp-for="AboutTitle2" id="AboutTitle2" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="AboutDescription2"></span>
                            <label for="AboutDescription2">Açıklama 2</label>
                            <input type="text" asp-for="AboutDescription2" id="AboutDescription2" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-outline-primary mt-4">Kaydet</button>
                        <a asp-area="Admin" asp-controller="About" asp-action="AboutList" class="btn btn-outline-dark mx-2 mt-4">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>