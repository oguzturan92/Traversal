@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "DestinationList";
    Layout = "_LayoutAdmin";
    int count = 1;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Tur Listesi</h6>
                    <hr>
                </div>
                <div class="card-body pt-0 pb-2">
                    <div class="table-responsive p-0">
                        @if (Model.Any())
                        {
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Sıra No</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Şehir</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Fiyat</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Kapasite</th>
                                        <th colspan="3"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.DestinationCity</td>
                                            <td>@item.DestinationPrice $</td>
                                            <td>@item.DestinationCapacity</td>
                                            <td><a asp-area="" asp-controller="Destination" asp-action="DestinationDetail" asp-route-id="@item.DestinationId" class="btn btn-outline-dark" target="_blank">Sitede Gör</a></td>
                                            <td><a asp-area="Admin" asp-controller="DestinationCQRS" asp-action="DestinationCQRSUpdate" asp-route-id="@item.DestinationId" class="btn btn-outline-warning">GÜNCELLE</a></td>
                                            <td><a asp-area="Admin" asp-controller="DestinationCQRS" asp-action="DestinationCQRSDelete" asp-route-id="@item.DestinationId" class="btn btn-outline-danger">SİL</a></td>
                                        </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        } else
                        {
                            <div class="alert alert-warning" role="alert">Henüz bir öge mevcut değil</div>
                            <hr>
                        }
                        <a asp-area="Admin" asp-controller="DestinationCQRS" asp-action="DestinationCQRSCreate" class="btn btn-outline-info mt-4">TUR OLUŞTUR</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>