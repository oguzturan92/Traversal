@model GetDestinationByIdQueryResult
@{
    ViewData["Title"] = "DestinationUpdate";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Tur Düzenle</h6>
                    <hr>
                </div>
                <div class="card-body pt-0 p-4">
                    <form asp-area="Admin" asp-controller="DestinationCQRS" asp-action="DestinationCQRSUpdate" method="post">
                        <input type="hidden" asp-for="DestinationId">
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="DestinationCity"></span>
                            <label for="DestinationCity">Şehir</label>
                            <input type="text" asp-for="DestinationCity" id="DestinationCity" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="DestinationDayNight"></span>
                            <label for="DestinationDayNight">Süre</label>
                            <input type="text" asp-for="DestinationDayNight" id="DestinationDayNight" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="DestinationPrice"></span>
                            <label for="DestinationPrice">Fiyat</label>
                            <input type="text" asp-for="DestinationPrice" id="DestinationPrice" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="DestinationImage"></span>
                            <label for="DestinationImage">Resim</label>
                            <input type="text" asp-for="DestinationImage" id="DestinationImage" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="DestinationDescription"></span>
                            <label for="DestinationDescription">Açıklama</label>
                            <textarea asp-for="DestinationDescription" id="CkEditor" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="DestinationStatus"></span>
                            <label for="DestinationStatus">Durum</label>
                            <select asp-for="DestinationStatus" id="DestinationStatus" class="form-control">
                                <option value="true">Açık</option>
                                <option value="false">Kapalı</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="DestinationCapacity"></span>
                            <label for="DestinationCapacity">Kapasite</label>
                            <input type="text" asp-for="DestinationCapacity" id="DestinationCapacity" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-outline-primary mt-4">Kaydet</button>
                        <a asp-area="Admin" asp-controller="DestinationCQRS" asp-action="DestinationCQRSList" class="btn btn-outline-dark mx-2 mt-4">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'CkEditor' );
    </script>
}