@model VisitorUpdateDTO
@{
    ViewData["Title"] = "VisitorUpdate";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Ziyaretçi Güncelle</h6>
                    <hr>
                </div>
                <div class="card-body pt-0 p-4">
                    <form asp-area="Admin" asp-controller="Visitor" asp-action="VisitorUpdate" method="post">
                        <input type="hidden" asp-for="VisitorId">
                        <div class="form-group">
                            <span class="validation-text" id="validation-text" asp-validation-for="VisitorName"></span>
                            <label for="VisitorName">Ad</label>
                            <input type="text"asp-for="VisitorName" id="VisitorName" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="VisitorSurname"></span>
                            <label for="VisitorSurname">Soyad</label>
                            <input type="text" asp-for="VisitorSurname" id="VisitorSurname" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="VisitorMail"></span>
                            <label for="VisitorMail">Mail</label>
                            <input type="text" asp-for="VisitorMail" id="VisitorMail" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="VisitorCity"></span>
                            <label for="VisitorCity">Şehir</label>
                            <input type="text" asp-for="VisitorCity" id="VisitorCity" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="VisitorCountry"></span>
                            <label for="VisitorCountry">Ülke</label>
                            <input type="text" asp-for="VisitorCountry" id="VisitorCountry" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-outline-primary mt-4">Kaydet</button>
                        <a asp-area="Admin" asp-controller="Visitor" asp-action="VisitorList" class="btn btn-outline-dark mx-2 mt-4">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>