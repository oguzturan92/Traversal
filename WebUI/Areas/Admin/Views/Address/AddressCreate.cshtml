@model Address
@{
    ViewData["Title"] = "AddressCreate";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Adres Oluştur</h6>
                    <hr>
                </div>
                <div class="card-body pt-0 p-4">
                    <form asp-area="Admin" asp-controller="Address" asp-action="AddressCreate" method="post">
                        <div class="form-group">
                            <span class="validation-text" id="validation-text" asp-validation-for="AddressMail"></span>
                            <label for="AddressMail">Mail</label>
                            <input type="text"asp-for="AddressMail" id="AddressMail" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="AddressPhone"></span>
                            <label for="AddressPhone">Telefon Numarası</label>
                            <input type="text" asp-for="AddressPhone" id="AddressPhone" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="AddressContent"></span>
                            <label for="AddressContent">Adres</label>
                            <input type="text" asp-for="AddressContent" id="AddressContent" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="AddressUrl"></span>
                            <label for="AddressUrl">Harita Url</label>
                            <input type="text" asp-for="AddressUrl" id="AddressUrl" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-outline-primary mt-4">Kaydet</button>
                        <a asp-area="Admin" asp-controller="Address" asp-action="AddressList" class="btn btn-outline-dark mx-2 mt-4">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>