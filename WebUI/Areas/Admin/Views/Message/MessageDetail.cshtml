@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Mesaj Detay</h6>
                    <hr>
                </div>
                <div class="card-body pt-0 p-4">
                    <form>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="MessageFullname"></span>
                            <label for="MessageFullname">Ad Soyad</label>
                            <input type="text"asp-for="MessageFullname" id="MessageFullname" class="form-control" disabled>
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="MessageMail"></span>
                            <label for="MessageMail">Mail</label>
                            <input type="text" asp-for="MessageMail" id="MessageMail" class="form-control" disabled>
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="MessageSubject"></span>
                            <label for="MessageSubject">Konu</label>
                            <input type="text" asp-for="MessageSubject" id="MessageSubject" class="form-control" disabled>
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="MessageContent"></span>
                            <label for="MessageContent">Mesaj</label>
                            <input type="text" asp-for="MessageContent" id="MessageContent" class="form-control" disabled>
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="MessageDate"></span>
                            <label for="MessageDate">Tarih</label>
                            <input type="text" asp-for="MessageDate" id="MessageDate" class="form-control" disabled>
                        </div>
                        <a asp-area="Admin" asp-controller="Message" asp-action="MessageList" class="btn btn-outline-dark mx-2 mt-4">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>