@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "_LayoutAdmin";
    int count = 1;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Kullanıcı Listesi</h6>
                    <hr>
                </div>
                <div class="card-body pt-0 pb-2">
                    <div class="table-responsive p-0">
                        @if (Model.Any())
                        {
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Sıra No</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ad Soyad</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                                        <th colspan="4"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name @item.Surname</td>
                                            <td>@item.Email</td>
                                            <td><a asp-area="Admin" asp-controller="User" asp-action="UserUpdate" asp-route-id="@item.Id" class="btn btn-outline-primary">YORUMLAR</a></td>
                                            <td><a asp-area="Admin" asp-controller="Reservation" asp-action="ReservationList" asp-route-userId="@item.Id" class="btn btn-outline-success">TUR GEÇMİŞİ</a></td>
                                            <td><a asp-area="Admin" asp-controller="User" asp-action="UserUpdate" asp-route-id="@item.Id" class="btn btn-outline-warning">GÜNCELLE</a></td>
                                            <td><a asp-area="Admin" asp-controller="User" asp-action="UserDelete" asp-route-id="@item.Id" class="btn btn-outline-danger">SİL</a></td>
                                        </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        } else
                        {
                            <div class="alert alert-warning" role="alert">Henüz bir öge mevcut değil</div>
                            <hr>
                        }
                        <a asp-area="Admin" asp-controller="User" asp-action="UserCreate" class="btn btn-outline-info mt-4">KULLANICI OLUŞTUR</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>