@model Testimonial
@{
    ViewData["Title"] = "TestimonialUpdate";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Deneyimleyen DÃ¼zenle</h6>
                    <hr>
                </div>
                <div class="card-body pt-0 p-4">
                    <form asp-area="Admin" asp-controller="Testimonial" asp-action="TestimonialUpdate" method="post">
                        <input type="hidden" asp-for="TestimonialId">
                        <div class="form-group">
                            <span class="validation-text" id="validation-text" asp-validation-for="TestimonialFullname"></span>
