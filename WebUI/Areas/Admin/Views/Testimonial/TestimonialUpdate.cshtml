                            <label for="TestimonialComment">Yorum</label>
                            <input type="text" asp-for="TestimonialComment" id="TestimonialComment" class="form-control">
                        </div>
                        <div class="form-group">
                            <span class="validation-text" asp-validation-for="TestimonialImage"></span>
                            <label for="TestimonialImage">Resim</label>
                            <input type="text" asp-for="TestimonialImage" id="TestimonialImage" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-outline-primary mt-4">Kaydet</button>
