@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
    int count=0;
}


<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Turlar </h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Turlar </li>
            </ul>
        </div>
    </div>
</section>

<!--  Work gallery section -->
<section class="grids-1 py-5">
    <div class="grids py-lg-5 py-md-4">
        <div class="container">
            <h3 class="hny-title mb-5">Turlar</h3>
            <div class="row">
                
                @foreach (var item in Model)
                {
                    count++;
                    <div class="col-lg-4 col-md-4 col-6 @(count > 3 ? "mt-lg-5 mt-4":"")">
                        <div class="column">
                            <a asp-controller="Destination" asp-action="DestinationDetail" asp-route-id="@item.DestinationId"><img src="@item.DestinationImage" alt="" class="img-fluid"></a>
                            <div class="info">
                                <h4><a href="blog-single.html">@item.DestinationCity</a></h4>
                                <p>@item.DestinationDayNight</p>
                                <div class="dst-btm">
                                    <h6 class="">Fiyat </h6>
                                    <span>$@item.DestinationPrice</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>